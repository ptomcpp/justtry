#include <iostream>
#include <string>

int findMarker(std::string signal,int markersize)
{
    
        for(int i=markersize;i<signal.length();i++)
    {
        std::string markerPart=signal.substr(i-markersize,markersize);
        bool find=true;
        for(int j=0;j<markersize;j++)
        {
            auto findPos=markerPart.find(markerPart.at(j),j+1);
            if(findPos!=std::string::npos) 
            {   find=false;
                break; 
            }

        }
        if(find==true)return i;
    }
    return 0;
}

int main()
{
    std::string signal="";
    std::cout<<std::endl<<"answer: "<<findMarker(signal,14);
    return 0;
}
