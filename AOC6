#include <iostream>
#include <vector>
#include <fstream>
#include <algorithm>
#include <string>
#include <stack>


int findMarker(std::string signal)
{
        for(int i=3;i<signal.length();i++)
    {
        if(signal.at(i)!=signal.at(i-1)&&signal.at(i)!=signal.at(i-2)&&signal.at(i)!=signal.at(i-3))
        {
            if(signal.at(i-1)!=signal.at(i-3)&&signal.at(i-1)!=signal.at(i-2))
            {
                if(signal.at(i-2)!=signal.at(i-3))
                { 
                    
                    return i+1;
                }
            }
        }
    }
    return 0;
}

int main()
{
    std::string signal="";
    std::cout<<std::endl<<"answer: "<<findMarker(signal);


    return 0;
}



